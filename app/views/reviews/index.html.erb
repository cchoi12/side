<header>
  <h2>Reviews for <%= link_to "#{@movie.title.titleize}", @movie %></h2>
</header>

<% @reviews.each do |review| %>
<ol>
  <h4><%= review.name %></h4>
  <p>"<em><%= review.comment %>"</em></p>
  <p><%= review.stars %> stars</p>
  <p><%= review.created_at.strftime('%b %d, %Y') %></p>
  <hr />
</ol>
<% end %>
