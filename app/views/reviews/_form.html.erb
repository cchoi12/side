<%= form_for([@movie, @review]) do |f| %>
<%= render 'shared/errors', object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required stars">
        <%= f.label :stars %>
        <%= f.select :stars,
                    Review::STAR,
                    prompt: 'How many stars?'
                    %>
      </li>
      <li class="required">
        <%= f.label :comment %>
        <%= f.text_area :comment, cols: 80, placeholder: 'Thoughts?' %>
      </li>
      <p>
        <%= f.submit 'Post Review' %>
        <%= link_to 'Cancel', @movie, class: 'button' %>
      </p>
    </ol>
  </fieldset>
<% end %>
