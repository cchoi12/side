<article>
  <header>
    <h2><%= @event.name %></h2>
  </header>
  <p><%= truncate(@event.description, length: 35, seperator: ' ') %></p>
  <table>
    <tr>
      <th>Location:</th>
      <td><%= @event.location %></td>
    </tr>
    <tr>
      <th>Price: </th>
      <td><%= format_price(@event) %></td>
    </tr>
    <tr>
      <th>Start Date: </th>
      <td><%= @event.starts_at %></td>
    </tr>
  </table>
</article>
