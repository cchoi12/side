<h1><%= pluralize(@events.size, 'Event') %></h1>

<span>Listing generated at <%= @time %></span> <br />

<% @events.each do |event| %>
  <article>
    <header>
      <%= image_for event %>
      <h2><%= link_to event.name, event %></h2>
      <h3><%= pluralize(event.capacity, 'spot') %></h3>
    </header>
    <p><%= truncate(event.description, length: 35, seperator: ' ') %></p>
    <table>
      <tr>
        <th>Location:</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Price: </th>
        <td><%= format_price(event) %></td>
      </tr>
      <tr>
        <th>Start Date: </th>
        <td><%= event.starts_at %></td>
      </tr>
    </table>
  </article>
  <%= link_to 'Edit', edit_event_path(event) %>
  <%= link_to 'Delete', event_path(event), method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
