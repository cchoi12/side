<h1>Editing <%= @movie.title %></h1>

<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :total_gross %><br />
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.label :release_date %><br />
    <%= f.datetime_field :release_date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 10, cols: 40 %>
  </p>
  <%= f.submit %>
<% end %>
