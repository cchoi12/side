<h1><%= pluralize(@movies.size, 'Movie') %></h1>
<br />
<%= link_to 'New Movie', new_movie_path %>

<% @movies.each do |movie| %>
  <article>
    <header>
      <%= movie_image_for movie %>
      <h2><%= link_to movie.title, movie %></h2>
      <h3>Starring: <%= movie.cast %></h3>
    </header>
    <p><%= truncate(movie.description, length: 40, seperator: ' ') %></p>
    <table>
      <tr>
        <th>Rating:</th>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross: </th>
        <td><%= price_formatter movie %></td>
      </tr>
      <tr>
        <th>Release Date: </th>
        <td><%= format_date_and_timeago movie %></td>
      </tr>
      <tr>
        <th>Duration: </th>
        <td><%= movie.duration %></td>
      </tr>
    </table>
    <%= link_to 'Edit', edit_movie_path(movie) %>
    <%= link_to 'Delete', movie_path(movie), method: :delete, data: {confirm: 'Are you sure about that?'} %>
  </article>
<% end %>
