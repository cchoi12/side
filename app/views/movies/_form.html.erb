<%= form_for @movie do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :total_gross %><br />
    <%= f.number_field :total_gross %>
  </p>
  <p>
    <%= f.label :release_date %><br />
    <%= f.date_field :release_date %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 10, cols: 40 %>
  </p>
  <p>
    <%= f.label :image_file_name %><br />
    <%= f.text_field :image_file_name,
                    placeholder: 'JPG, PNG and Only dat!'
                    %>
  </p>
  <p>
    <%= f.label :cast %><br />
    <%= f.text_field :cast %>
  </p>
  <p>
    <%= f.label :director %><br />
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= f.text_field :duration, size: 10 %>
  </p>
  <%= f.submit %>
  <%= link_to 'Cancel', movies_path %>
<% end %>
